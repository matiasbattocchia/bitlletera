= link_to 'Bitlletera', root_path, :class => 'brand'

%ul.nav
  %li= link_to t(:help).capitalize!
  %li= link_to 'Más...'

- unless user_signed_in?
  = form_for  resource,
              as: resource_name,
              url: session_path(resource_name),
              html: {class: 'navbar-form pull-right'} do |f|
    = f.email_field :email, class: 'input-medium', placeholder: t(:email).capitalize!
    = f.password_field :password, class: 'input-medium', placeholder: t(:password).capitalize!
    = f.button t(:sign_in).capitalize!, class: 'btn'
    //= link_to t(:forgot_pass?), new_password_path(resource_name)

  %ul.nav#exchange.pull-right
    %li= link_to '฿1 = $40,23'

- else
  %ul
    %li= link_to t(:edit_registration), edit_user_registration_path
    %li= link_to t(:sign_out), destroy_user_session_path, method: :delete
