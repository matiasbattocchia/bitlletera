%ul.nav
  %li= link_to t(:help).capitalize!
  %li= link_to 'Más...'

= form_for  resource,
            as: resource_name,
            url: session_path(resource_name),
            html: {class: 'navbar-form pull-right'} do |f|
  = f.email_field :email, class: 'input-medium', placeholder: t(:email).capitalize!
  = f.password_field :password, class: 'input-medium', placeholder: t(:password).capitalize!
  = f.button t(:sign_in).capitalize!, class: 'btn'
