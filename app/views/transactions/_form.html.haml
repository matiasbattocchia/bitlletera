= form_for @transaction do |f|
  -if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender_account
    = f.text_field :sender_account
  .field
    = f.label :receiver_account
    = f.text_field :receiver_account
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
